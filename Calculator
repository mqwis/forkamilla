using System;

class ArrayExample
{
    static void Main()
    {
        int[] numbers = { 5, 2, 8, 1, 9, 3 };
        
        Console.WriteLine("Исходный массив:");
        foreach (int num in numbers)
        {
            Console.Write(num + " ");
        }
        
        Array.Sort(numbers);
        
        Console.WriteLine("\nОтсортированный массив:");
        foreach (int num in numbers)
        {
            Console.Write(num + " ");
        }
        
        int sum = 0;
        foreach (int num in numbers)
        {
            sum += num;
        }
        
        Console.WriteLine($"\nСумма элементов: {sum}");
        Console.WriteLine($"Среднее значение: {(double)sum / numbers.Length}");
    }
}
